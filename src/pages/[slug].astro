---
import Layout from '../components/Layout/index.astro'
import ReadingProgressBar from '../components/ReadingProgressBar/index.astro'
import NewsDetail from '../components/NewsDetail/index.astro'
import newsList from '../data/news'

export async function getStaticPaths() {
  return newsList.map((news) => ({
    params: { slug: news.slug },
    props: { news }
  }))
}

const { news } = Astro.props
---

<Layout title={news.title} description={news.description}>
  <ReadingProgressBar />
  <NewsDetail {...news} />
</Layout>
